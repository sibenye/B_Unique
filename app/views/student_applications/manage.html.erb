	    <td class="field">
	    	<span class="label"><%= f.label :ApplicationID %></span><br />
	    	<%= f.text_field :first_name, :value => @student_application.application_code, :readonly=>'readonly'%></td>
	    <td class="field">
		    <span class="label"><%= f.label :Admission_Session %></span><br />
		    <%= select(:student_application, :admission_session, @sessions) %></td>
  </td>
  </tr>
  <tr>
  	<td colspan="3">
  		<span>Office Use:</span>
  	</td>
  </tr>
  <tr>
	  <td class="field">
	  	<span class="label"><%= f.label :Remarks %></span><br />
